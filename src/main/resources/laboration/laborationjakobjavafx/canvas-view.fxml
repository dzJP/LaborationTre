                    <Lighting>
                        <bumpInput>
                            <Shadow />
                        </bumpInput>
                        <light>
                            <Light.Distant />
                        </light>
                    </Lighting>
                </effect>
            </CheckBox>
            <Button fx:id="ChangeSizeID" graphicTextGap="1.0" layoutX="-1.0" layoutY="34.0" mnemonicParsing="false" onAction="#onChangeSize" prefHeight="32.0" prefWidth="89.0" text="Size Changer" />
